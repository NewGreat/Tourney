<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import usspg31.tourney.controller.layout.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox spacing="5" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<stylesheets>
		<URL value="@/ui/css/main.css" />
	</stylesheets>
	<children>
		<HBox spacing="5.0" VBox.vgrow="ALWAYS">
			<VBox HBox.hgrow="ALWAYS">
				<Label styleClass="sub-heading" text="Angemeldete Spieler" />
				<TableView fx:id="tableRegisteredPlayers" maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
			</VBox>
			<VBox spacing="5.0">
				<Pane VBox.vgrow="ALWAYS" />
				<Button fx:id="buttonAddAttendee" styleClass="table-edit-button">
					<graphic>
						<IconPane styleClass="icon-arrow-right, half" />
					</graphic>
				</Button>
				<Button fx:id="buttonRemoveAttendee" styleClass="table-edit-button">
					<graphic>
						<IconPane styleClass="icon-arrow-left" />
					</graphic>
				</Button>
				<Pane VBox.vgrow="ALWAYS" />
			</VBox>
			<VBox HBox.hgrow="ALWAYS">
				<Label styleClass="sub-heading" text="Anwesende Spieler" />
				<TableView fx:id="tableAttendingPlayers" maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
			</VBox>
		</HBox>
		<HBox alignment="BOTTOM_RIGHT">
			<Button fx:id="buttonStartTournament" text="Turnier beginnen" />
		</HBox>
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</VBox>
